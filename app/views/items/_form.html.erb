<%= render 'layouts/errors', :object => @item %>

<%= form_for [@user, @item] do |f| %>
  <%= f.label :artist %>
  <%= f.text_field :artist, :class => 'form-control' %>
  <%= f.label :title %>
  <%= f.text_field :title, :class => 'form-control' %>
  <%= f.label :link %>
  <%= f.text_field :link, :class => 'form-control' %>
  <br>
  <%= f.submit :class => 'btn btn-success' %>
<% end %>
