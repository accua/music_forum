<h1>Front-page</h1>

<% if @users.any? %>
  <ul><% @users.each do |user| %>
    <li><%= link_to user.name, user_path(user) %></li>
  <% end %></ul>
<% else %>
  <h2>There are no users</h2>
<% end %>
<br>
<%= link_to 'New User', new_user_path %>

<% if @lists.any? %>
  <% @lists.each do |list| %>
    <%= list.name %>
  <% end %>
<% else %>
  <h2>There are no playlists</h2>
<% end %>
